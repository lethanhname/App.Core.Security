@model App.Core.Security.Web.ViewModels.Account.ChangePasswordViewModel
<!-- input hidden -->
<div class="row">
    <div class="col-md-12">

        <input asp-for="RowVersion" type="hidden" />
        <div class="panel-group">

            <!-- /.panel -->
            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="form-group">
                        <label asp-for="Password" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" />
                                <span class="input-group-addon"><i class="fa fa-star-o" style="color: red;"></i></span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span class="input-group-addon"><i class="fa fa-star-o" style="color: red;"></i></span>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.panel-group -->
    </div>
    <!-- /.col-md-7 -->
</div>