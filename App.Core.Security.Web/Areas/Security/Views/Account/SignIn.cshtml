@model App.Core.Security.Web.ViewModels.Account.SignInViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Identity Server</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
        
      <form class="loginform" asp-controller="Account" asp-action="SignIn" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
          
          <h1>Log in</h1>
          <div class="inset">
          <p>
            <div asp-validation-summary="All" class="text-danger"></div>
          </p>
          <p>
            <label asp-for="Email"></label>
            <input asp-for="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
          </p>
          <p>
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
          </p>
          <p>
            <input asp-for="RememberMe" />
            <label for="remember">Remember me?</label>
          </p>
          </div>
          <p class="p-container">
            <span>Forgot password ?</span>
            <input type="submit" value="Log in">
          </p>
          
      </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
